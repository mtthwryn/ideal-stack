---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'

const {
	id,
	data: { title, description, pubDate, heroImage, category },
	readTime,
	slug
} = Astro.props
---

<a
	href={`/post/${slug}/`}
	class='grid grid-rows-[300px_auto] md:grid-rows-[300px_220px] min-h-full group bg-white dark:bg-stone-900/40 border border-stone-200 dark:border-stone-800 rounded-xl overflow-hidden shadow-sm hover:shadow-lg hover:border-stone-300 dark:hover:border-stone-700 transition-all duration-300'
	aria-label={`Read post: ${title}`}
>
	<div class='relative overflow-hidden'>
		<Image
			src={heroImage}
			width={600}
			height={200}
			format='webp'
			class='h-full min-w-full object-cover group-hover:scale-105 transition-transform duration-500'
			alt={`${title} - ${description || 'Blog post'}`}
			loading='lazy'
		/>

		<!-- Category Badge -->
		<div class='absolute top-4 left-4 z-10'>
			<span
				class='inline-block px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold text-white'
			>
				{category}
			</span>
		</div>

		<div class='z-30 absolute bottom-0 w-full h-12 flex items-center justify-center'>
			<div class='-z-10 absolute bottom-0 glass w-full min-h-full'></div>
			<div class='flex items-center justify-center gap-2 text-white'>
				<FormattedDate date={pubDate} />
				<span>â€¢</span>
				<span class='text-sm font-medium'>{readTime}</span>
			</div>
		</div>
	</div>

	<div class='flex justify-between flex-col gap-3 md:gap-0 py-4 px-5'>
		<div class='flex flex-col gap-2'>
			<div class='flex flex-col gap-1.5'>
				<h3
					class='text-xl md:text-2xl font-bold -tracking-wider text-stone-900 dark:text-white group-hover:text-stone-600 dark:group-hover:text-stone-300 transition-colors line-clamp-2'
				>
					{title}
				</h3>
			</div>

			<p
				class='overflow-hidden text-stone-600 dark:text-stone-400 mb-3 font-[400] leading-relaxed text-sm md:text-base line-clamp-4'
			>
				{description}
			</p>
		</div>

		<footer class='flex justify-between items-center'>
			<div
				class='flex justify-center items-center text-stone-700 dark:text-stone-300 group-hover:text-stone-900 dark:group-hover:text-white transition-all duration-200 ease-in-out font-semibold gap-1.5'
			>
				<span>Read Post</span>
				<span
					class='mt-[1px] group-hover:rotate-45 transition-transform duration-250 ease-in-out inline-block'
					><ArrowUp width='18' height='18' /></span
				>
			</div>
		</footer>
	</div>
</a>

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('img')

	document.addEventListener('DOMContentLoaded', function () {
		const showAnimations = localStorage.getItem('animations') === 'true'

		if (showAnimations) {
			animate(
				'.effect',
				{
					opacity: [0, 1],
					clipPath: ['circle(0% at 0% 0%)', 'circle(100% at 50% 50%)']
				},
				{ duration: 2, easing: 'ease' }
			)
		} else {
			images.forEach((img) => {
				img.classList.remove('opacity-0')
			})
		}
	})
</script>
