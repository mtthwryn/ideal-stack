---
import { siteConfig } from '@/data/site.config'
import ShareIcon from './icons/ShareIcon.astro'
import CopyIcon from './icons/CopyIcon.astro'
const message = siteConfig.shareMessage

const URL = Astro.url.href
const shareText = encodeURIComponent(`${message} ${URL}`)
const whatsappUrl = `https://wa.me/?text=${shareText}`
const telegramUrl = `https://t.me/share/url?url=${encodeURIComponent(URL)}&text=${encodeURIComponent(message)}`
---

<div class='relative flex flex-col gap-2'>
	<span class='mb-1 font-bold text-2xl'>Share</span>
	<button
		id='share-button'
		aria-label='Share options'
		class='flex items-center justify-center w-12 h-12 rounded-lg bg-stone-100 dark:bg-stone-800 text-stone-700 dark:text-stone-300 hover:bg-stone-200 dark:hover:bg-stone-700 transition-colors'
	>
		<ShareIcon />
	</button>

	<div
		id='share-menu'
		class='absolute top-16 left-0 bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg shadow-lg p-2 min-w-[200px] opacity-0 pointer-events-none translate-y-2 transition-all duration-200 z-50'
	>
		<button
			id='copy-link'
			class='w-full flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-stone-100 dark:hover:bg-stone-800 transition-colors text-left text-stone-700 dark:text-stone-300'
		>
			<CopyIcon />
			<span class='font-medium'>Copy Link</span>
		</button>
		<a
			href={whatsappUrl}
			target='_blank'
			rel='noopener noreferrer'
			class='flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-stone-100 dark:hover:bg-stone-800 transition-colors text-stone-700 dark:text-stone-300'
		>
			<svg class='w-5 h-5' fill='currentColor' viewBox='0 0 24 24'>
				<path
					d='M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z'
				></path>
			</svg>
			<span class='font-medium'>WhatsApp</span>
		</a>
		<a
			href={telegramUrl}
			target='_blank'
			rel='noopener noreferrer'
			class='flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-stone-100 dark:hover:bg-stone-800 transition-colors text-stone-700 dark:text-stone-300'
		>
			<svg class='w-5 h-5' fill='currentColor' viewBox='0 0 24 24'>
				<path
					d='M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.559z'
				></path>
			</svg>
			<span class='font-medium'>Telegram</span>
		</a>
	</div>
</div>

<script>
	const shareButton = document.getElementById('share-button')
	const shareMenu = document.getElementById('share-menu')
	const copyLinkButton = document.getElementById('copy-link')

	if (shareButton && shareMenu) {
		// Toggle menu
		shareButton.addEventListener('click', (e) => {
			e.stopPropagation()
			const isVisible = shareMenu.classList.contains('opacity-100')

			if (isVisible) {
				shareMenu.classList.add('opacity-0', 'pointer-events-none', 'translate-y-2')
				shareMenu.classList.remove('opacity-100', 'pointer-events-auto', 'translate-y-0')
			} else {
				shareMenu.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-2')
				shareMenu.classList.add('opacity-100', 'pointer-events-auto', 'translate-y-0')
			}
		})

		// Close menu when clicking outside
		document.addEventListener('click', (e) => {
			if (!shareButton.contains(e.target as Node) && !shareMenu.contains(e.target as Node)) {
				shareMenu.classList.add('opacity-0', 'pointer-events-none', 'translate-y-2')
				shareMenu.classList.remove('opacity-100', 'pointer-events-auto', 'translate-y-0')
			}
		})

		// Copy link functionality
		if (copyLinkButton) {
			copyLinkButton.addEventListener('click', async () => {
				try {
					await navigator.clipboard.writeText(window.location.href)

					// Visual feedback
					const originalText = copyLinkButton.querySelector('span')?.textContent
					if (originalText) {
						copyLinkButton.querySelector('span')!.textContent = 'Copied!'
						setTimeout(() => {
							copyLinkButton.querySelector('span')!.textContent = originalText
						}, 2000)
					}

					// Close menu
					shareMenu.classList.add('opacity-0', 'pointer-events-none', 'translate-y-2')
					shareMenu.classList.remove('opacity-100', 'pointer-events-auto', 'translate-y-0')
				} catch (err) {
					console.error('Failed to copy:', err)
				}
			})
		}
	}
</script>
